<!DOCTYPE html>
<html>

  <head>
    <title>Film Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://jenil.github.io/bulmaswatch/darkly/bulmaswatch.min.css">
    <div class="wrapper" role="navigation">
  </head>


  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">    

    <% if !current_user %>
          <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
          <a class="navbar-brand" href="<%= new_user_path %>"/>Sign Up</a>
          <%= link_to "Sign in", login_path, class:"navbar-brand" %>
      <% else %>
          <a class="navbar-brand" href="<%= films_path %>"/>All Films</a>

          <%= link_to "#{current_user.username}'s Profile", user_path(current_user), class:"navbar-brand"%>
         <%= link_to "Most Commented", "/films/favorites" %>
          <%= link_to "Sign Out", logout_path, class:"navbar-brand",method:'delete' %>
      <% end %>  
   
  </div>
</nav>

<% flash.each do |name, message| -%>
  <%= content_tag :div, message, class: "notification is-warning" %>
<% end %>

    <%= yield %>
  </body>
</html>



